@model IEnumerable<PIZZERIA.Models.Pago>

@{
    ViewData["Title"] = "Registro de Pagos";
    var count = 1;
}
<div class="d-grid gap-2">        
    <a class="btn btn-outline-danger" asp-action="ExportarExcel">GENERAR REPORTE EXCEL</a>
</div><br>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                â„–
             </th>
             <th scope="col">
