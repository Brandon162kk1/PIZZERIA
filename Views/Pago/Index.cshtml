@model IEnumerable<PIZZERIA.Models.Pago>

@{
    ViewData["Title"] = "Registro de Pagos";
    var count = 1;
}
<div class="d-grid gap-2">        
    <a class="btn btn-success" asp-action="ExportarExcel">GENERAR REPORTE EXCEL</a>
</div><br>
<form  asp-action="ListarPedidos" class="row g-3">
  <div class="col-auto">
    <label>Usuario:</label>
    <input type="email" class="form-control" name="usuario" placeholder="example@gmail.com">
  </div>
  <div class="col-auto">
    <label>Fecha Inicio:</label>
    <input type="date" class="form-control" name="fechaInicio" placeholder="">
  </div>
  <div class="col-auto">
    <label>Fecha Fin:</label>
    <input type="date" class="form-control" name="fechaFin" placeholder="">
  </div>
  <div class="col-auto">
    <button class="btn btn-outline-danger">Buscar Pago</button>
  </div>
</form>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                â„–
             </th>
             <th scope="col">
                Usuario
             </th>
             <th scope="col">
                Fecha y Hora
             </th>

              <th scope="col">
                Monto Total
              </th>
              <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <th scope="row">
                @count
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>                
            <td>
                S/. @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            <td>             
                <!--
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                -->
            </td>
        </tr>
        count++;
}
    </tbody>
</table>