@model PIZZERIA.Models.Pago
@{
    ViewData["Title"] = "Realiza tu Pago";
}

<h1>@ViewData["Title"]</h1>
<form asp-controller="Proforma" asp-action="Index">
  <button type="submit" class="btn btn-primary"><-- Retrocede</button>
</form>
    <div class="container">
        <div class="row">
          <div class="col-sm-15 mt-5">
          <div class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 250px;">
           <form asp-controller="Pago" asp-action="Pagar">
              <div class="form-group row">
                <input type="hidden" asp-for="UserID"/>
                <div class="col-sm-2">
                  <label class="control-label">Tarjeta</label>
                </div>
                <div class="col-sm-2">
                  <select asp-for="NombreTarjeta" class="form-select">
  <option selected>Elige</option>
  <option value="1">BCP</option>
  <option value="2">BBVA</option>
  <option value="3">Scotiabank</option>
</select>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label class="control-label"># de Tarjeta</label>
                </div>
                <div class="col-sm-2">
                  <input asp-for="NumeroTarjeta" type="number" class="form-control" />
                </div>
              </div>              
              <div class="form-group row">
                <div class="col-sm-2">
                  <label class="control-label">Fecha de Vencimiento</label>
                </div>
                <div class="col-sm-2">
                  <input asp-for="DueDateYYMM" type="month" class="form-control" />
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label class="control-label">CVV</label>
                </div>
                <div class="col-sm-2">
                  <input asp-for="Cvv" type="number" class="form-control" />
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label class="control-label">Monto Total</label>
                </div>
                <div class="col-sm-2">
                  <input asp-for="MontoTotal" class="form-control" data-thousands="," data-decimal="." />
                </div>
              </div>  
              <div class="form-group row">
                <div class="col-sm-2">
                  <button type="submit" class="btn btn-primary">Pagar</button> 
                </div>
              </div>
            </form>
            </div>
            <h1>@ViewData["Message"]</h1>
          </div>
        </div>
    </div>