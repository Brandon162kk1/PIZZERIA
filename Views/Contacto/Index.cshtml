@model PIZZERIA.Models.Contacto

<h1>@ViewData["Message"]</h1>
<div class="row">
    <div class="col-sm-4">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner" style="height:100%">
                <div class="carousel-item active">
                    <img class="img-responsive" width="359" height="420"src="/Images/promo1.png" style="border-radius: 20px;" />
                </div>
                <div class="carousel-item">
                    <img class="img-responsive" width="359" height="420"src="/Images/promo2.jpg" style="border-radius: 20px;" />
                </div>
                <div class="carousel-item">
                    <img class="img-responsive" width="359" height="420"src="/Images/promo3.png" style="border-radius: 20px;" />
                </div>
                <div class="carousel-item">
                    <img class="img-responsive" width="359" height="420"src="/Images/promo_personal.jpg" style="border-radius: 20px;" />
                </div>
                <div class="carousel-item">
                    <img class="img-responsive" width="359" height="420"src="/Images/promo_duo.jpg" style="border-radius: 20px;" />
                </div>
                <div class="carousel-item">
                    <img class="img-responsive" width="359" height="420"src="/Images/promo_monster.jpg" style="border-radius: 20px;" />
                </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Atr√°s</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
        </button>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 420px;">
            <center><h2 class="display-4">Contactanos</h2>
            <form asp-controller="Contacto" asp-action="Enviar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Telefono" class="control-label"></label>
            <input asp-for="Telefono" class="form-control"  />
            <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <label asp-for="Comentario"></label>
            <textarea asp-for="Comentario" class="form-control" ></textarea>
            <br>
            <button type="submit" class="btn btn-primary">Enviar</button> 
            </form></center>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}