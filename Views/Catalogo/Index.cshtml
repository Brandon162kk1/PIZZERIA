@model IEnumerable<PIZZERIA.Models.Producto>
@{
    ViewData["Title"] = "Catálogo de Pizzas";
    <script src="~/js/site.js"></script>
}

<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div  class="col-sm-4">
              <div id="carta" class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <center><img class="img-responsive" width="200" height="200"
                       src="/images/@item.ImageName" alt="@item.ImageName"  /></center>
                  </div>
                </div>
                <div class="card-body">
                  <center>
                  <h2 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h2>
                  <p class="card-text">Precio: S/@Html.DisplayFor(modelItem => item.Precio)</p>
                  <a class="btn btn-outline-danger" onclick="agregacion();" asp-action="Add" asp-route-id="@item.Id" style="background-color:red; color:white;"><img src="/Images/carrito1.png" class="img-fluid" alt="" width="20px" heigh="20px">Añadir</a>
                  <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Ver más</a>
                  </center>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>