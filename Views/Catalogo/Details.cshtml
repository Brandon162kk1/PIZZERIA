@model PIZZERIA.Models.Producto
@{
    ViewData["Title"] = "Información";
    ViewData["title2"] = "Completa";
}

    <div class="container">
      <div class="row">
        <div class="col-sm-4">
         <div class="card" style="border-radius: 20px; height: 420px;">
          <div class="card-body" style="margin: auto auto;">
            <div class="card-img-actions">
              <h1 class="card-title" style="text-align: center;">@Html.DisplayFor(model => model.Name)</h1>
              <br>
              <img class="img-responsive" width="310" height="310"
                src="/Images/@Html.DisplayFor(model => model.ImageName)"
                alt="@Html.DisplayFor(model => model.ImageName)" style="border-radius: 20px;" />
            </div>
          </div>
         </div>
        </div>
        <div class="col-sm-4">
         <div class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 420px;">
          <div class="card-body">
            <h1 style="text-align: center;">@ViewData["Title"]</h1>
            <h5>Insumos:</h5>
            <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
            <h5>Precio:</h5>
            <p class="card-title">S/. @Html.DisplayFor(model => model.Precio)</p>
          </div>
        </div>
       </div>
       <div class="col-sm-4">
         <div class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 420px;">
          <div class="card-body">
            <h1 style="text-align: center;">@ViewData["Title2"]</h1>
            <h5>Seleccione:</h5>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">Familiar</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" disabled>
              <label class="form-check-label" for="defaultCheck2">Martes y Jueves(2x1)</label>
            </div>
            <h5>Cantidad:</h5>
            <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Elige">
            <datalist id="datalistOptions">
             <option value="1">
             <option value="2">
             <option value="3">
             <option value="4">
             <option value="5">
            </datalist>
            <h5>Nota:</h5>
            <div class="form-floating">
              <textarea class="form-control" placeholder="" id="floatingTextarea"></textarea>
              <label for="floatingTextarea">Ejemplo: La corteza dorada</label>
            </div>
            <br>
            <div class="d-grid gap-2">
                    <a class="btn btn-primary" asp-action="Add" asp-route-id="@Model.Id">Añadir</a>
            </div>
          </div>
      </div>
    </div>