@model List<PIZZERIA.Models.Consultas>

@{
    ViewData["Title"] = "Consultas Encontradas";
    var count = 1;
}
<h1><center>@ViewData["Title"]</center></h1>
<form  asp-controller="Consultas" asp-action="BuscarConsultas" method="GET" class="row g-3">
  <div class="col-auto">
    <label>Usuario:</label>
    <input type="email" class="form-control" name="usuario" placeholder="example@gmail.com">
  </div>
  <!--<div class="col-auto">
    <label>Fecha Inicio:</label>
    <input type="date" class="form-control" name="fechaInicio" placeholder="">
  </div>
  <div class="col-auto">
    <label>Fecha Fin:</label>
    <input type="date" class="form-control" name="fechaFin" placeholder="">
  </div>-->
  <div class="col-auto">
    <button class="btn btn-outline-danger">Buscar Pago</button>
  </div>
</form><br>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                â„–
            </th>
            <th scope="col">
                Usuario
            </th>
            <th scope="col">
                Correo Electronico
            </th>
            <th>
                Comentario
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <th scope="row">
                @count
            </th>
            <td>
                @item.UserID
            </td>
            <td>
                @item.Email
            </td>                
            <td>
                @item.Comentario
            </td>
        </tr>
        count++;
}
    </tbody>
</table>
