@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Mis pedidos";
    IEnumerable<PIZZERIA.Models.Proforma> listItemsCarrito = new List<Proforma>();
    listItemsCarrito = @Model.elementosCarrito;
    Decimal montoTotal = @Model.montoTotal;
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">

        <div class="col-sm-9">
        <div class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 420px;">
    <table class="table">
        <thead>
        <tr>
            <th>
                Imagen
            </th>
            <th>
                Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>
            <th>
                Sub-Total
            </th>
            <th>Detalles</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Proforma item in Model.elementosCarrito) {
        <tr>
            <td>
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="60" height="60"src="/images/@item.Producto.ImageName" alt="@item.Producto.ImageName"  />
                  </div>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                --
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('¿Desea eliminar el ítem del carrito?')">Eliminar</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
    </div>
    </div>
    <div class="col-sm-3">
        <div class="card" style="border-radius: 20px; height: 420px;">
          <div class="card-body" style="margin: auto auto;">
            <div class="card-img-actions">
                <a class="btn btn-primary" asp-controller="Pago" asp-action="Create" asp-route-monto="@montoTotal">Pagar</a>
                <h2 style="text-align: left;">Total S/. @montoTotal</h2>
                <a class="btn btn-primary" asp-controller="Catalogo" asp-action="Index" style="">Seguir Comprando</a>
            </div>
          </div>
        </div>
    </div>
</div>
</div>


